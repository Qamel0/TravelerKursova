@using Traveler.Models.ViewModels
@model RegisterViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Traveler.styles.css" asp-append-version="true" />


<div class="loginBlock">
     <form id="login" asp-controller="Account" asp-action="Register" method="post">
         <h1>Створити акаунт</h1>

        <label for="email">Електронна адреса</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="text" asp-for="Email" id="email" name="email" class="form-control" placeholder="Введіть свою електронну адресу" />
            
            
        <label for="password">Пароль</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="text" asp-for="Password" id="password" name="password" class="form-control" placeholder="Вигадайте пароль" />

        <button type="submit">Зареєструватися</button>
    </form>
</div>



