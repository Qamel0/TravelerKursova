@using Traveler.Models.ViewModels
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Traveler.styles.css" asp-append-version="true" />


<div class="loginBlock">
    <form id="login" asp-controller="Account" asp-action="Register" method="post">
        <h1>Створити акаунт</h1>

        <div class="form-group">
            <label for="email">Електронна адреса</label>
            <input type="text" asp-for="Email" id="email" name="email" class="form-control" placeholder="Введіть електронну адресу" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" asp-for="Password" id="password" name="password" class="form-control" placeholder="Вигадайте пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit">Зареєструватися</button>
    </form>
</div>



