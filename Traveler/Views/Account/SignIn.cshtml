@using Traveler.Models.ViewModels
@model RegisterViewModel;

@{
    ViewData["Title"] = "SignIn";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Traveler.styles.css" asp-append-version="true" />

<div class="loginBlock">
    <form id="login" asp-controller="Account" asp-action="SignIn" method="post">
        <h1>Увійти в акаунт</h1>

        @if (ViewData.ModelState.TryGetValue("wrongLog", out var wrongLogState) && wrongLogState?.Errors?.Count > 0)
        {
            <div class="form-error">
                @Html.ValidationMessage("wrongLog")
            </div>
        }
        

        <div class="form-group">
            <label for="email">Електронна адреса</label>
            <input type="text" asp-for="Email" id="email" name="email" class="form-control" placeholder="Введіть електронну адресу" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" asp-for="Password" id="password" name="password" class="form-control" placeholder="Згадайте пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit">Увійти</button>
    </form>
</div>

